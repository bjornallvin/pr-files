<%- include('header'); %>

<table class="table-auto">
    <thead>
        <tr>
            <th class="px-4 py-2">Title</th>
            <th class="px-4 py-2">Number</th>
            <th class="px-4 py-2">Author</th>
            <th class="px-4 py-2">Files</th>
        </tr>
    </thead>
    <tbody>
        <% prs.forEach(function(pr) { %>
        <tr>
            <td class="border px-4 py-2"><a href="/<%= pr.number %>"><%= pr.title %></a></td>
            <td class="border px-4 py-2"><%= pr.number %></td>
            <td class="border px-4 py-2"><%= pr.author %></td>
            <td class="border px-4 py-2"><%= pr.files.length %></td>
        </tr>
        <% }); %>
    </tbody>
</table>

<%- include('footer'); %>